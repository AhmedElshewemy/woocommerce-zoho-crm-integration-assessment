# Server Configuration
PORT=3000                        # Port number for the server (optional, defaults to 3000)
WOO_WEBHOOK_SECRET=             # Required: Your WooCommerce Webhook Secret

# Zoho CRM Configuration
ZOHO_CLIENT_ID=                 # Required: Your Zoho Client ID (starts with 1000.)
ZOHO_CLIENT_SECRET=             # Required: Your Zoho Client Secret
ZOHO_REFRESH_TOKEN=             # Required: Your Zoho Refresh Token (starts with 1000.)

# Zoho API URLs (usually don't need to change these)
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_API_BASE=https://www.zohoapis.com/crm/v9
